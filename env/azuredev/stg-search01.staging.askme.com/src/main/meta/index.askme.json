{
  "settings" : {
    "number_of_shards" : 15,
    "number_of_replicas" : 1,
    "index.cache.query.enable": true,
    "refresh_interval": "10s",
    "analysis": {
      "char_filter": {
        "mapping_char_filter": {
          "type": "mapping",
          "mappings": [
            "&=> and "
          ]
        },
        "alphanumeric_char_filter": {
          "type":"pattern_replace",
          "pattern":"(?U)[^\\p{alnum}]+",
          "replacement":" "
        },
        "html_strip_char_filter": {
          "type":"html_strip"
        }
      },
      "filter" : {
        "light_stemmer": {
          "type": "stemmer",
          "name": "light_english"
        },
        "possessive_stemmer": {
          "type": "stemmer",
          "name": "possessive_english"
        },
        "stopword": {
          "type": "stop",
          "stopwords": ["a", "an", "the", "in", "of"]
        },
        "word_delimiter": {
          "type": "word_delimiter"
        },
        "synonym" : {
          "type" : "synonym",
          "synonyms" : [
            "i-pod, i pod => ipod",
            "i-phone, i phone => iphone",
            "iwatch, i-watch => apple watch",
            "appartment, aptt => apartment",
            "macdonald => mcdonald",
            "restorent, restorant, restraunt, restaurent, restuarnt, restro => restaurant",
            "motorcycle, motorbike => bike",
            "tire => tyre",
            "sonytv => sony tv",
            "choco, choclat, choclate => chocolate"
          ]
        },
        "plural_stem": {
          "type": "com.askme.mandelbrot.es.analysis.stem.StemmingTokenFilterFactory",
          "stemmer": "plural",
          "min-len": 3,
          "exclude": ["ins"]
        },
        "participle_stem": {
          "type": "com.askme.mandelbrot.es.analysis.stem.StemmingTokenFilterFactory",
          "stemmer": "participle",
          "min-len": 5,
          "exclude": ["inning"]
        },
        "recombine": {
          "type": "com.askme.mandelbrot.es.analysis.misc.RecombiningTokenFilterFactory"
        }
      },
      "analyzer": {
        "keyword_analyzer": {
          "type": "custom",
          "char_filter": ["html_strip_char_filter", "mapping_char_filter"],
          "tokenizer": "standard",
          "filter": ["standard", "lowercase", "stopword", "asciifolding", "possessive_stemmer", "word_delimiter", "plural_stem", "participle_stem", "synonym", "recombine"]
        },
        "default": {
          "type": "custom",
          "char_filter": ["html_strip_char_filter", "mapping_char_filter"],
          "tokenizer": "standard",
          "filter": ["standard", "lowercase", "stopword", "asciifolding", "possessive_stemmer", "word_delimiter", "plural_stem", "participle_stem", "synonym"]
        }
      }
    }
  }
}

